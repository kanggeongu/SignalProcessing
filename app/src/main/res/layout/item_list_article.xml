<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/mArticleView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/brown_round_rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/no_bottom_radius_brown">

                <Button
                    android:id="@+id/buttonUser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/ic_face_black_24dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textViewUserName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/bmfont"
                    android:text="작성자" />

                <LinearLayout
                    android:id="@+id/linearDelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonDelete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_delete_black_24dp"
                        android:text="" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewContent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:maxLines="4"
                    android:text=""
                    android:textSize="25sp"
                    android:fontFamily="@font/bmfont"
                    android:padding="5dp"
                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/no_top_radius_brown">

                <Button
                    android:id="@+id/buttonAddLover"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_empty_heart"
                    android:layout_weight="6"
                    android:text="" />

                <TextView
                    android:id="@+id/textViewTheNumberOfLovers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+1"
                    android:textSize="40sp"
                    android:layout_weight="11"
                    android:gravity="center_vertical"
                    />

                <Button
                    android:id="@+id/buttonAddComment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/comment"
                    android:layout_weight="6"
                    android:text="" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="11"/>

                <Button
                    android:id="@+id/buttonAddReporter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_alert"
                    android:layout_weight="6"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
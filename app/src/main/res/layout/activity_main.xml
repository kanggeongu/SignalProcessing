<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- MainActivity : 이메일 로그인 / 구글 로그인 / 회원가입   -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingTop="20dp"
        android:src="@drawable/temp_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="20dp" />

    <com.google.android.gms.common.SignInButton
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/share_btn_glogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/share_edit_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="@drawable/skin_brown_round_rectangle"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="이메일" />

    <EditText
        android:id="@+id/share_edit_pw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/skin_brown_round_rectangle"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/share_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fill_brown_round_rectangle"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15dp"
        android:text="이메일 로그인" />

    <Button
        android:id="@+id/share_btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_round_rectangle"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="이메일 회원가입" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/share_btn_verify"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:background="@drawable/empty_yellow_round_rectangle"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:text="인증 메일 재전송"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/share_btn_find"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:background="@drawable/empty_yellow_round_rectangle"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:text="비밀번호 재설정"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="80dp" />


</LinearLayout>
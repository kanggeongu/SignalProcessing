<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- MainActivity : 이메일 로그인 / 구글 로그인 / 회원가입   -->

    <EditText
        android:id="@+id/share_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일" />

    <EditText
        android:id="@+id/share_edit_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호" />

    <Button
        android:id="@+id/share_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 로그인" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/share_btn_glogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/share_btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 회원가입" />

    <Button
        android:id="@+id/share_btn_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기" />

</LinearLayout>
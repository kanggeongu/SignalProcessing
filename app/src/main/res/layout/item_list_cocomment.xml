<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:padding="10dp"
    android:background="@drawable/bottom_brown_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_face_black_24dp"
            android:text="" />

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:text="작성자" />

        <TextView
            android:id="@+id/textViewEndDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textSize="10dp"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:maxLines="4"
            android:text=""
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAddLover"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_empty_heart"
            android:text="" />

        <TextView
            android:id="@+id/textViewTheNumberOfLovers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="+1" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/buttonAddReporter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_pink_alert"
            android:text="" />

        <LinearLayout
            android:id="@+id/linearDelete"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_delete_black_24dp"
                android:text="" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
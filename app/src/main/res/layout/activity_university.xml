<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UniversityActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editSUv"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="  name"
            android:inputType="textPersonName"
            android:background="@drawable/brown_round_rectangle"
            android:fontFamily="@font/bmfont"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorBrown"/>

        <Button
            android:id="@+id/Sbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/editSUv"
            android:layout_weight="1"
            android:background="@drawable/fill_brown_round_rectangle"
            android:fontFamily="@font/bmfont"
            android:text="검색"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/yellow_round_rectangle"
        android:scrollbars="vertical"
        android:layout_margin="5dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editRUv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ems="10"
            android:hint="  Request"
            android:inputType="textPersonName"
            android:background="@drawable/brown_round_rectangle"
            android:fontFamily="@font/bmfont"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"/>

        <Button
            android:id="@+id/Rbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="추가 요청"
            android:background="@drawable/fill_brown_round_rectangle"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/bmfont"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    tools:context=".AddWaitAnimalActivity">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:textSize="30dp"
            android:gravity="center"
            android:text="신규동물 신청서" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-2dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/pic_done_final" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:gravity="center"
                android:text="사진"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:id="@+id/addwait_img_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addwait_btn_addPhoto"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/empty_yellow_round_rectangle"
                    android:fontFamily="@font/boldnanum"
                    android:text="갤러리"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/addwait_btn_Camera"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/empty_yellow_round_rectangle"
                    android:fontFamily="@font/boldnanum"
                    android:text="카메라"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:gravity="center"
                android:text="동물 이름"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/addwait_edit_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/brown_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:hint="이름"
                android:padding="5dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:gravity="center"
                android:text="이름 뜻"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/addwait_edit_meaning"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/brown_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:hint="이름 뜻"
                android:padding="5dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:gravity="center"
                android:text="동물 성별"
                android:textColor="@color/colorWhite" />

            <Spinner
                android:id="@+id/addwait_spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/boldnanum" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:gravity="center"
                android:text="최초 발견 위치"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/addwait_edit_location"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/brown_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:hint="최초 발견 위치"
                android:padding="5dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:gravity="center"
                android:text="특징"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/addwait_edit_feature"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/brown_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:hint="특징"
                android:padding="5dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/addwait_btn_upload"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/fill_brown_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:text="신규 동물 신청하기"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
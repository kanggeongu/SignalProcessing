<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thislayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MypageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_navi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/icon_menu" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/bmjua"
                android:gravity="center"
                android:text="메뉴바"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                app:srcCompat="@drawable/icon_logout" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="45dp"
                android:layout_marginRight="37dp"
                android:fontFamily="@font/bmjua"
                android:gravity="center"
                android:text="로그아웃"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:paddingTop="15dp"
                android:src="@drawable/temp_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/brown_topbottom_rectangle"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="마이페이지"
                    android:textColor="@color/colorBrown"
                    android:textSize="20dp" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mypage_univimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/img_icon" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/boldnanum"
                    android:paddingLeft="5dp"
                    android:text="이메일"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/mypage_textid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/boldnanum"
                    android:padding="5dp"
                    android:text="닉네임(수정 안됨)"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/boldnanum"
                    android:paddingLeft="5dp"
                    android:text="닉네임"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/mypage_textname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/boldnanum"
                    android:padding="5dp"
                    android:text="이메일(수정 안됨)"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mypage_textuniv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/boldnanum"
                        android:padding="5dp"
                        android:text="학교 (수정 안됨)"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/mypage_btn_univ"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/fill_brown_round_rectangle"
                        android:fontFamily="@font/boldnanum"
                        android:text="수정"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/mypage_btn_editpw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/brown_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:text="비밀번호 재설정 메일 전송"
                android:textColor="@color/colorBrown" />

            <Button
                android:id="@+id/mypage_btn_bye"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/brown_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:text="회원탈퇴"
                android:textColor="@color/colorBrown" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mypage_btn_receive"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:background="@drawable/yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:text="받은 쪽지함"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/mypage_btn_send"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:background="@drawable/empty_yellow_round_rectangle"
                android:fontFamily="@font/boldnanum"
                android:text="보낸 쪽지함"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mypage_rview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbottom_yellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_waitanimal_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fill_brown_round_rectangle"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="이름"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_waitanimal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmjua"
                    android:paddingLeft="10dp"
                    android:text="동물 이름"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fill_brown_round_rectangle"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="상태"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_waitanimal_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmjua"
                    android:paddingLeft="10dp"
                    android:text="진행중"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fill_brown_round_rectangle"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="특징"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_waitanimal_detail"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/bmjua"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="2dp"
                    android:text="특징설명"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".VerifyEmailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:text="이메일 인증 재전송"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/verify_edit_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="@drawable/skin_brown_round_rectangle"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="textPassword"
        android:hint="이메일" />

    <EditText
        android:id="@+id/verify_edit_pw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="@drawable/skin_brown_round_rectangle"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="비밀번호" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="15dp" />

    <Button
        android:id="@+id/verify_btn_send"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/fill_brown_round_rectangle"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15dp"
        android:text="인증 메일 보내기" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="200dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".FindpwActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:textSize="25dp"
        android:text="가입한 이메일을 입력하세요" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/find_edit_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/bmjua"
        android:textSize="12dp"
        android:padding="10dp"
        android:background="@drawable/skin_brown_round_rectangle"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:hint="이메일" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="15dp" />

    <Button
        android:id="@+id/find_btn_send"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/fill_brown_round_rectangle"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:text="비밀번호 재설정 메일 보내기"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="200dp" />

</LinearLayout>